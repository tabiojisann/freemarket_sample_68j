= render partial: 'shared/headerB'
.Box
  .Main
    .UserInputTitle2
      発送元・お届け先住所変更
    .UserInputError2
      -# = render "devise/shared/error_messages", resource: @address
    = form_for(@address) do |f|
      .Input2
        .Input__name
          .Input__name__text.SideType
            .Input__name__text.bold
              お名前(全角)
            .Input__name__text.red
              必須
          .Input__name__fullname
            = f.text_field :family_name, autofocus: true, placeholder: "　例）山田", class: "Input__name__fullname__family_name", id: "family_name_address"
            = f.text_field :first_name, autofocus: true, placeholder: "　例）彩", class: "Input__name__fullname__first_name", id: "first_name_address"
          #Input_error__family_name_address
          #Input_error__first_name_address

          .Input__name__text.SideType
            .Input__name__text.bold
              お名前カナ(全角)
            .Input__name__text.red
              必須
          .Input__name__furigana
            = f.text_field :family_furigana, autofocus: true, placeholder: "　例）ヤマダ", class: "Input__name__furigana__family_name", id: "family_furigana_address"
            = f.text_field :first_furigana, autofocus: true, placeholder: "　例）アヤ", class: "Input__name__furigana__first_name", id: "first_furigana_address"
          #Input_error__family_furigana_address
          #Input_error__first_furigana_address

        .Input__number
          .Input__number__text.SideType
            .Input__number__text.bold
              郵便番号
            .Input__number__text.red
              必須
          = f.text_field :number, placeholder: "　例）123-4567", class: "Input__number__form", id: "number"
          #Input_error__number

        .Input__email
          .Input__email__text.SideType
            .Input__email__text.bold
              都道府県
            .Input__email__text.red
              必須
          = f.select :prefecture, [["北海道"], ["青森県"], ["岩手県"], ["宮城県"], ["秋田県"], ["山形県"], ["福島県"], ["茨城県"], ["栃木県"], ["群馬県"], ["埼玉県"], ["千葉県"], ["東京都"], ["神奈川県"], ["新潟県"], ["富山県"], ["石川県"], ["福井県"], ["山梨県"], ["長野県"], ["岐阜県"], ["静岡県"], ["愛知県"], ["三重県"], ["滋賀県"], ["京都府"], ["大阪府"], ["兵庫県"], ["奈良県"], ["和歌山県"], ["鳥取県"], ["島根県"], ["岡山県"], ["広島県"], ["山口県"], ["徳島県"], ["香川県"], ["愛媛県"], ["高知県"], ["福岡県"], ["佐賀県"], ["長崎県"], ["熊本県"], ["大分県"], ["宮崎県"], ["鹿児島県"], ["沖縄県"]], class: "Input_error__prefecture", id: "prefecture", prompt: ""
          #Input_error__prefecture

        .Input__email
          .Input__email__text.SideType
            .Input__email__text.bold
              市町村区
            .Input__email__text.red
              必須
          = f.text_field :municipality, placeholder: "　横浜区緑市", class: "Input__error__municipality", id: "municipality"
          #Input_error__municipality

        .Input__email
          .Input__email__text.SideType
            .Input__email__text.bold
              番地
            .Input__email__text.red
              必須
          = f.text_field :street, placeholder: "　青山1-1-1", class: "Input__error__street", id: "street"
          #Input_error__street

        .Input__email
          .Input__email__text.SideType
            .Input__email__text.bold
              建物名
            .Input__email__text.gray
              任意
          = f.text_field :building, placeholder: "　柳ビル103", class: "Input__error__building", id: "building"
          #Input_error__building

        .Input__email
          .Input__email__text.SideType
            .Input__email__text.bold
              電話番号
            .Input__email__text.gray
              任意
          = f.text_field :phone_number, placeholder: "　09012345678", class: "Input__error__phone_number", id: "phone_number"
          #Input_error__phone_number

        .Input__submit
          .Input__submit__btn
            = f.submit "登録する", class: "Btn", id: "AddressInput__btn"
